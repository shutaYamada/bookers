<h1><strong>Books</strong></h1>

<table>
    <thead>
        <tr>
            <th><strong>Title</strong></th>
            <th><strong>Body</strong></th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td>show</td>
            <td>edit</td>
            <td> <%= button_to "Destroy", book_path(book.id), method: :delete %> </td>
        </tr>
        <% end %>
    </tbody>
</table>

<h2><strong>New Book</strong></h2>
<%= form_with model: @book do |f| %>
<div>
    <h4>Title</h4>
    <%= f.text_field :title %>
</div>
	
<div>
    <h4>Body</h4>
    <%= f.text_area :body %>
</div>

<div>
    <%= f.submit 'Create Book' %>
</div>
<% end %>