<main>
    <h1 class="footer"><strong>Editing Book</strong></h1>

    <%= form_with model: @book do |f| %>
    <div class="edit-label">
        <%= f.label :title, "title" %>
    </div> 
    <div>
        <%= f.text_field :title %>
    </div>
    <div class="edit-label">
        <%= f.label :body, "body" %>
    </div>
    <div>
        <%= f.text_area :body %>
    </div>
    <div>
        <%= f.submit "Update book"%>
    </div>
    <% end %>

    <%= link_to 'Show', book_path(@book.id), class: 'link' %>
    <%= link_to 'Back', :back, class: 'link' %>
</main>